{{- $config := (datasource "config") -}}
{
	"version": 2,
	"remoteDnsServers": [
		"8.8.8.8:53",
		"4.4.4.4:54"
	],
	"envs": [
		{
			"name": "local_forwarding_zone",
			"hostnames": [
				{
					"id": 1,
					"hostname": ".{{ if (has $config.stacks.ingress "zoneInternal") }}{{ $config.stacks.ingress.zoneInternal }}{{ else }}localhost{{ end }}",
					"ip": "{{ if (has $config.stacks.ingress "zoneInternalIP") }}{{ $config.stacks.ingress.zoneInternalIP }}{{ else }}{{ env.Getenv "STACK_INGRESS_INTERNALIP" "127.0.0.1" }}{{ end }}",
					"target": "acme.com",
					"ttl": 60,
					"type": "A"
				}
			]
		}
	],
	"activeEnv": "local_forwarding_zone",
	"webServerPort": 5380,
	"dnsServerPort": 53,
	"defaultDns": true,
	"logLevel": "DEBUG",
	"logFile": "/tmp/dnsproxy.log",
	"registerContainerNames": false,
	"hostMachineHostname": "",
	"domain": "",
	"dpsNetwork": false,
	"dpsNetworkAutoConnect": false
}